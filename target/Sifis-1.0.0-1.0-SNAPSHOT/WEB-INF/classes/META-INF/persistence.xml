<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="planejamento" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Bairro</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Categoria</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Cidade</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Feriado</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Ferias</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Fiscal</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Inspetoria</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Jurisdicao</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Rota</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Usuario</class>
        <class>crago.dfisc.afg.sifis.planejamento.entities.Viagem</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="validate" />
        </properties>
    </persistence-unit>
</persistence>
